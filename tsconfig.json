{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es6",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "strict": false,
    "skipDefaultLibCheck": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../apps/psu-storybook/src/composite/media-display/ImageSlider/ImageSlider.stories.tsx",
    "../../apps/psu-storybook/src/composite/media-display/ImageSlider/SliderLightBox/SliderLightBox.stories.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
